<%- include('../shared/header') %>

<div class="max-w-6xl mx-auto mt-10 px-4">
  <h1 class="text-3xl font-bold text-blue-600 mb-6">My Prescriptions</h1>

  <% if (!prescriptions || prescriptions.length === 0) { %>
    <p class="text-gray-600 text-center mt-5">No prescriptions found.</p>
  <% } else { %>
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
        <thead class="bg-blue-500 text-white">
          <tr>
            <th class="py-2 px-4 text-left">Date</th>
            <th class="py-2 px-4 text-left">Doctor</th>
            <th class="py-2 px-4 text-left">Download</th>
          </tr>
        </thead>
        <tbody>
          <% prescriptions.forEach(prescription => { %>
            <tr class="border-b hover:bg-gray-50">
              <td class="py-2 px-4"><%= prescription.createdAt ? prescription.createdAt.toLocaleString() : 'N/A' %></td>
              <td class="py-2 px-4"><%= prescription.doctorId ? prescription.doctorId.name : 'N/A' %></td>
              <td class="py-2 px-4">
                <% if (prescription.filePath) { %>
                  <a href="/<%= prescription.filePath %>" 
                     target="_blank"
                     class="bg-blue-500 text-white px-4 py-1 rounded hover:bg-blue-600">
                     View / Download
                  </a>
                <% } else { %>
                  <span class="text-gray-400">No File</span>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>
</div>

<%- include('../shared/footer') %>
