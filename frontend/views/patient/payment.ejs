<%- include('../shared/header') %>

<div class="max-w-3xl mx-auto mt-10 px-4">
  <div class="bg-white shadow-lg rounded-lg p-8 text-center">
    <% if (typeof doctor !== 'undefined') { %>
      <!-- Doctor Appointment Payment -->
      <h2 class="text-2xl font-bold text-gray-800 mb-4">
        Pay ₹<%= doctor.fee %> to confirm your appointment
      </h2>
      <img src="/images/qr-code.jpg" alt="QR Code" class="mx-auto mb-6 w-60 rounded shadow" />

      <form action="/patient/submit-payment" method="POST" class="space-y-4">
        <div>
          <label class="block text-gray-700 mb-2 font-medium">Enter UPI Transaction ID / Name:</label>
          <input type="text" name="transactionId" 
                 class="w-full border rounded px-4 py-2 focus:ring focus:ring-blue-300 outline-none" 
                 required />
        </div>
        <input type="hidden" name="doctorId" value="<%= doctor._id %>" />
        <input type="hidden" name="amount" value="<%= doctor.fee + 100 %>" />

        <button type="submit" 
                class="bg-blue-500 text-white px-6 py-2 rounded hover:bg-blue-600 transition">
          Submit Payment
        </button>
      </form>
    <% } else { %>
      <!-- Subscription Payment -->
      <h2 class="text-2xl font-bold text-gray-800 mb-4">
        Pay ₹500 to unlock all features
      </h2>
      <% if (typeof message !== 'undefined') { %>
        <p class="bg-yellow-100 text-yellow-800 p-3 rounded mb-4"><%= message %></p>
      <% } %>
      <img src="/images/qr-code.jpg" alt="QR Code" class="mx-auto mb-6 w-60 rounded shadow" />

      <form action="/patient/submit-subscription-payment" method="POST" class="space-y-4">
        <div>
          <label class="block text-gray-700 mb-2 font-medium">Enter UPI Transaction ID / Name:</label>
          <input type="text" name="transactionId" 
                 class="w-full border rounded px-4 py-2 focus:ring focus:ring-blue-300 outline-none" 
                 required />
        </div>
        <input type="hidden" name="amount" value="500" />

        <button type="submit" 
                class="bg-blue-500 text-white px-6 py-2 rounded hover:bg-blue-600 transition">
          Submit Payment
        </button>
      </form>
    <% } %>
  </div>
</div>

<%- include('../shared/footer') %>
