<%- include('../shared/header') %>

<div class="max-w-6xl mx-auto mt-10 px-4">
  <div class="flex items-center justify-between mb-4">
    <h1 class="text-3xl font-bold text-blue-600">My Lab Test Reports</h1>

    <!-- Actions -->
    <div class="flex items-center gap-3">
      <a href="/patient/lab-tests/request/new"
         class="inline-block bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700">
        Request Home Collection
      </a>
      <a href="/patient/lab-tests/requests/my"
         class="inline-block bg-gray-200 text-gray-800 px-4 py-2 rounded hover:bg-gray-300">
        View My Requests
      </a>
    </div>
  </div>

  <% if (!records || records.length === 0) { %>
    <p class="text-gray-600 text-center mt-8">No lab test records found.</p>
  <% } else { %>
    <div class="overflow-x-auto">
      <table class="min-w-full bg-white shadow-md rounded-lg overflow-hidden">
        <thead class="bg-blue-500 text-white">
          <tr>
            <th class="py-2 px-4 text-left">Test Name</th>
            <th class="py-2 px-4 text-left">Performed By</th>
            <th class="py-2 px-4 text-left">Date &amp; Time</th>
            <th class="py-2 px-4 text-left">Notes</th>
            <th class="py-2 px-4 text-left">Download</th>
          </tr>
        </thead>
        <tbody>
          <% records.forEach(function(record){ %>
            <tr class="border-b hover:bg-gray-50">
              <td class="py-2 px-4"><%= record.testName %></td>
              <td class="py-2 px-4"><%= record.performedBy %></td>
              <td class="py-2 px-4">
                <%= record.recordDate ? new Date(record.recordDate).toLocaleString() : '' %>
              </td>
              <td class="py-2 px-4"><%= record.notes %></td>
              <td class="py-2 px-4">
                <% if (record.filename) { %>
                  <!-- FIXED: lab test files live under /uploads/lab-tests -->
                  <a href="/uploads/lab-tests/<%= record.filename %>"
                     target="_blank"
                     class="bg-blue-500 text-white px-4 py-1 rounded hover:bg-blue-600">
                    Download
                  </a>
                <% } else { %>
                  <span class="text-gray-400">No File</span>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  <% } %>
</div>

<%- include('../shared/footer') %>
