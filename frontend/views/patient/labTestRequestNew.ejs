<%- include('../shared/header') %>
<div class="max-w-2xl mx-auto mt-10 bg-white shadow p-6 rounded">
  <h1 class="text-2xl font-bold text-blue-600 mb-4">Request a Lab Test (Home Sample Collection)</h1>
  <% if (error) { %><p class="text-red-600 mb-3"><%= error %></p><% } %>

  <form method="POST" action="/patient/lab-tests/request">
    <label class="block mb-2 font-medium">Test Name</label>
    <input name="testName" class="border p-2 rounded w-full mb-4" placeholder="e.g., Complete Blood Count (CBC)" required />

    <label class="block mb-2 font-medium">Preferred Date</label>
    <input type="date" name="preferredDate" class="border p-2 rounded w-full mb-4" required />

    <div class="grid grid-cols-2 gap-4">
      <div>
        <label class="block mb-2 font-medium">Preferred Time From</label>
        <input type="time" name="preferredTimeFrom" class="border p-2 rounded w-full mb-4" required />
      </div>
      <div>
        <label class="block mb-2 font-medium">Preferred Time To</label>
        <input type="time" name="preferredTimeTo" class="border p-2 rounded w-full mb-4" required />
      </div>
    </div>

    <label class="block mb-2 font-medium">Pickup Address</label>
    <textarea name="pickupAddress" class="border p-2 rounded w-full mb-4" rows="3" required></textarea>

    <label class="block mb-2 font-medium">Contact Phone</label>
    <input name="contactPhone" class="border p-2 rounded w-full mb-4" placeholder="+91..." required />

    <label class="block mb-2 font-medium">Notes (optional)</label>
    <textarea name="notes" class="border p-2 rounded w-full mb-4" rows="3"></textarea>

    <button class="bg-blue-600 text-white px-4 py-2 rounded">Submit Request</button>
  </form>
</div>
<%- include('../shared/footer') %>
