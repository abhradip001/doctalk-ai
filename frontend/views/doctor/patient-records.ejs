<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Patient Records</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex flex-col min-h-screen">

  <!-- Navbar (same as doctor dashboard) -->
  <nav class="bg-blue-600 text-white px-6 py-4 flex justify-between items-center shadow">
    <h1 class="text-xl font-bold">Doctor Panel</h1>
    <div class="space-x-4">
      <a href="/doctor/dashboard" class="hover:underline">Dashboard</a>
      <a href="/doctor/appointments" class="hover:underline">Appointments</a>
      <a href="/doctor/upload-prescription" class="hover:underline">Upload Prescription</a>
      <a href="/doctor/profile" class="hover:underline">My Profile</a>
      <a href="/auth/logout" class="bg-red-500 px-3 py-1 rounded hover:bg-red-600">Logout</a>
    </div>
  </nav>

  <!-- Page Content -->
  <main class="flex-grow">
    <div class="max-w-5xl mx-auto mt-10 p-6 bg-white rounded shadow">
      <!-- Header -->
      <div class="flex items-center justify-between mb-4">
        <div>
          <h1 class="text-2xl font-bold text-blue-600">Patient Records</h1>
          <% if (typeof patientName !== 'undefined' && patientName) { %>
            <p class="text-sm text-gray-600 mt-1">
              Viewing notes for <span class="font-medium"><%= patientName %></span>
            </p>
          <% } %>
        </div>
        <div class="text-sm space-x-2">
          <a href="/doctor/dashboard"
             class="px-3 py-1 rounded bg-blue-50 text-blue-700 hover:bg-blue-100">← Dashboard</a>
          <a href="/health-records/as-patient/<%= patientId %>"
             class="px-3 py-1 rounded bg-gray-50 text-gray-700 hover:bg-gray-100">View as Patient</a>
        </div>
      </div>

      <!-- Patient info -->
      <div class="bg-blue-50 border border-blue-100 rounded p-3 mb-6">
        <p class="text-sm text-blue-900">
          <span class="font-semibold">Patient:</span> <%= patientName || '—' %>
          <span class="mx-2 text-blue-300">•</span>
          <span class="font-semibold">Patient ID:</span> <%= patientId %>
        </p>
      </div>

      <!-- Add Note (doctor only) -->
      <% if (currentUser && currentUser.role === 'doctor') { %>
        <form action="/health-records/doctor-note" method="POST"
              class="bg-white border rounded p-4 mb-8 shadow space-y-3">
          <input type="hidden" name="patientId" value="<%= patientId %>">
          <input type="hidden" name="appointmentId"
                 value="<%= typeof appointmentId !== 'undefined' && appointmentId ? appointmentId : '' %>">

          <input name="title" required placeholder="Title (e.g., Follow-up advice)"
                 class="border p-2 rounded w-full focus:outline-none focus:ring focus:ring-blue-200"/>

          <textarea name="notes" required placeholder="Write note..."
                    class="border p-2 rounded w-full focus:outline-none focus:ring focus:ring-blue-200"
                    rows="4"></textarea>

          <div class="flex items-center justify-between">
            <button class="bg-blue-600 text-white px-5 py-2 rounded hover:bg-blue-700">Add Note</button>
            <span class="text-xs text-gray-500">Visible to patient by default</span>
          </div>
        </form>
      <% } %>

      <!-- Notes list -->
      <% if (!records || records.length === 0) { %>
        <p class="text-gray-600">No notes yet. Use the form above to add your first note for this patient.</p>
      <% } else { %>
        <div class="space-y-4">
          <% records.forEach(r => { %>
            <div class="bg-white border rounded p-4 shadow hover:shadow-md transition">
              <div class="flex flex-wrap items-start justify-between gap-2">
                <div>
                  <h3 class="font-semibold text-gray-900 text-lg"><%= r.title %></h3>
                  <% if (r.doctor && r.doctor.name) { %>
                    <p class="text-sm text-gray-500 mt-0.5">— Dr. <%= r.doctor.name %></p>
                  <% } %>
                </div>
                <span class="text-xs text-gray-500">
                  <%= new Date(r.createdAt).toLocaleString('en-IN') %>
                </span>
              </div>
              <p class="mt-3 whitespace-pre-line text-gray-800 leading-relaxed"><%= r.notes %></p>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-gray-800 text-white text-center p-4 mt-auto">
    &copy; <%= new Date().getFullYear() %> Clinic-AI | Doctor Panel
  </footer>
</body>
</html>
