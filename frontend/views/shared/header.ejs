<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= typeof title !== 'undefined' ? title : 'Clinic-AI' %></title>

  <!-- Tailwind CSS -->
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <style>
    body { font-family: 'Inter', sans-serif; }
  </style>
</head>
<body class="bg-gray-100 min-h-screen flex flex-col">

  <!-- Navbar -->
  <nav class="bg-white shadow-md">
    <div class="max-w-7xl mx-auto px-4 py-3 flex justify-between items-center">
      <!-- Logo -->
      <a href="/patient/dashboard" class="text-2xl font-bold text-blue-600">Clinic-AI</a>

      <!-- Menu Links -->
      <ul id="menu-links" class="hidden md:flex space-x-6 flex-col md:flex-row md:space-x-6 md:space-y-0 space-y-3 md:space-y-0">
        <li><a href="/patient/doctorList" class="text-gray-700 hover:text-blue-600 font-medium">Find Doctors</a></li>
        <li><a href="/patient/my-appointments" class="text-gray-700 hover:text-blue-600 font-medium">My Appointments</a></li>
        <li><a href="/patient/profile" class="text-gray-700 hover:text-blue-600 font-medium">Profile</a></li>
        <li><a href="/patient/health-records" class="text-gray-700 hover:text-blue-600 font-medium">Health Records</a></li>
        <li><a href="/patient/lab-tests" class="text-gray-700 hover:text-blue-600 font-medium">Lab Tests</a></li>
        <li><a href="/patient/prescriptions" class="text-gray-700 hover:text-blue-600 font-medium">Prescription</a></li>
        <li><a href="/auth/logout" class="text-red-500 font-semibold hover:underline">Logout</a></li>
      </ul>

      <!-- Mobile Menu Button -->
      <button id="menu-btn" class="md:hidden text-gray-800 focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </nav>

  <script>
    document.getElementById('menu-btn').addEventListener('click', () => {
      document.getElementById('menu-links').classList.toggle('hidden');
      document.getElementById('menu-links').classList.toggle('flex');
    });
  </script>
