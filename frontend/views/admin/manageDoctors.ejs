<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Manage Doctors</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">

  <!-- Custom Admin Navbar -->
  <nav class="bg-green-600 text-white px-6 py-4 flex justify-between items-center shadow">
    <h1 class="text-xl font-bold">Admin Panel</h1>
    <div class="space-x-4">
      <a href="/admin/dashboard" class="hover:underline">Dashboard</a>
      <a href="/admin/doctors" class="hover:underline font-bold">Doctors</a>
      <a href="/admin/patients" class="hover:underline">Patients</a>
      <a href="/admin/chat-logs" class="hover:underline">Chat Logs</a>
      <a href="/admin/payments" class="hover:underline">Payments</a>
      <a href="/admin/appointments" class="hover:underline">Appointments</a>
      <a href="/auth/logout" class="bg-red-500 px-3 py-1 rounded hover:bg-red-600">Logout</a>
    </div>
  </nav>

  <!-- Content -->
  <div class="max-w-7xl mx-auto mt-10 bg-white shadow rounded-lg p-6">
    <div class="flex justify-between mb-4">
      <h1 class="text-2xl font-bold text-green-600">Manage Doctors</h1>
      <a href="/admin/doctors/add" class="bg-green-500 text-white px-4 py-2 rounded hover:bg-green-600">
        + Add Doctor
      </a>
    </div>

    <% if (doctors.length === 0) { %>
      <p class="text-gray-600">No doctors available.</p>
    <% } else { %>
      <table class="w-full border border-gray-300 rounded">
        <thead class="bg-green-100">
          <tr>
            <th class="p-3 text-left border-b">Profile</th>
            <th class="p-3 text-left border-b">Name</th>
            <th class="p-3 text-left border-b">Email</th>
            <th class="p-3 text-left border-b">Phone</th>
            <th class="p-3 text-left border-b">Specialization</th>
            <th class="p-3 text-left border-b">Experience</th>
            <th class="p-3 text-left border-b">Availability</th>
            <th class="p-3 text-left border-b">Degree</th>
            <th class="p-3 text-left border-b">Actions</th>
          </tr>
        </thead>
        <tbody>
          <% doctors.forEach(doctor => { %>
            <tr class="hover:bg-gray-50">
              <!-- Profile Picture -->
              <td class="p-3 border-b">
                <% if (doctor.profileImage) { %>
                  <img src="/<%= doctor.profileImage %>" alt="Doctor Image" 
                       class="w-16 h-16 rounded-full object-cover border border-gray-300">
                <% } else { %>
                  <img src="/images/default-doctor.png" alt="Default Image" 
                       class="w-16 h-16 rounded-full object-cover border border-gray-300">
                <% } %>
              </td>

              <td class="p-3 border-b"><%= doctor.name %></td>
              <td class="p-3 border-b"><%= doctor.email %></td>
              <td class="p-3 border-b"><%= doctor.phone %></td>
              <td class="p-3 border-b"><%= doctor.specialization || 'N/A' %></td>
              <td class="p-3 border-b"><%= doctor.experience || 0 %> years</td>

              <!-- Availability Column -->
              <td class="p-3 border-b">
                <% if (doctor.availability && doctor.availability.days && doctor.availability.days.length) { %>
                  <p><strong>Days:</strong> <%= doctor.availability.days.join(', ') %></p>
                  <p><strong>Time:</strong> <%= doctor.availability.startTime || 'N/A' %> - <%= doctor.availability.endTime || 'N/A' %></p>
                <% } else { %>
                  Not Set
                <% } %>
              </td>

              <!-- Degree Column -->
              <td class="p-3 border-b">
                <% if (doctor.degreeFile) { %>
                  <a href="/<%= doctor.degreeFile %>" target="_blank" class="text-blue-500 underline">View</a>
                <% } else { %>
                  No file
                <% } %>
              </td>

              <!-- Actions -->
              <td class="p-3 border-b flex gap-2">
                <a href="/admin/doctors/edit/<%= doctor._id %>" 
                   class="bg-blue-500 text-white px-3 py-1 rounded hover:bg-blue-600">
                  Edit
                </a>
                <form action="/admin/doctors/delete/<%= doctor._id %>" method="POST"
                      onsubmit="return confirm('Are you sure you want to delete this doctor?')">
                  <button type="submit" class="bg-red-500 text-white px-3 py-1 rounded hover:bg-red-600">
                    Delete
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</body>
</html>
