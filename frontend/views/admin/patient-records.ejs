<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin • Patient Records</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 flex flex-col min-h-screen">

  <!-- Navbar (Admin, green to match dashboard) -->
  <nav class="bg-green-600 text-white px-6 py-4 flex justify-between items-center shadow">
    <h1 class="text-xl font-bold">Admin Panel</h1>
    <div class="space-x-4">
      <a href="/admin/dashboard" class="hover:underline font-bold">Dashboard</a>
      <a href="/admin/doctors" class="hover:underline">Doctors</a>
      <a href="/admin/patients" class="hover:underline">Patients</a>
      <a href="/admin/appointments" class="hover:underline">Appointments</a>
      <a href="/auth/logout" class="bg-red-500 px-3 py-1 rounded hover:bg-red-600">Logout</a>
    </div>
  </nav>

  <!-- Page Content -->
  <main class="flex-grow">
    <div class="max-w-5xl mx-auto mt-10 p-6 bg-white rounded shadow">
      <!-- Header -->
      <div class="flex items-center justify-between mb-4">
        <div>
          <h1 class="text-2xl font-bold text-green-600">Patient Records (Admin View)</h1>
          <% if (typeof patientName !== 'undefined' && patientName) { %>
            <p class="text-sm text-gray-600 mt-1">
              Viewing notes for <span class="font-medium"><%= patientName %></span>
            </p>
          <% } %>
        </div>

        <div class="flex items-center gap-2">
          <a href="/admin/dashboard"
             class="px-3 py-1 rounded bg-green-50 text-green-700 hover:bg-green-100 text-sm">← Admin Dashboard</a>
          <a href="/health-records/as-patient/<%= patientId %>"
             class="px-3 py-1 rounded bg-gray-50 text-gray-700 hover:bg-gray-100 text-sm">View as Patient</a>
        </div>
      </div>

      <!-- Quick open by Patient Name (for admins) -->
      <form action="/admin/open-patient-notes" method="GET"
            class="bg-green-50 border border-green-100 rounded p-3 mb-6 flex items-center gap-2">
        <input name="name" type="text" placeholder="Open another patient by name"
               class="border p-2 rounded w-full focus:outline-none focus:ring focus:ring-green-200" required />
        <button class="bg-green-600 text-white px-4 py-2 rounded hover:bg-green-700" type="submit">Open</button>
      </form>

      <!-- Patient info -->
      <div class="bg-white border border-gray-200 rounded p-3 mb-6">
        <p class="text-sm text-gray-800">
          <span class="font-semibold">Patient:</span> <%= patientName || '—' %>
          <span class="mx-2 text-gray-300">•</span>
          <span class="font-semibold">Patient ID:</span> <%= patientId %>
        </p>
      </div>

      <!-- Notes list -->
      <% if (!records || records.length === 0) { %>
        <p class="text-gray-600">No notes found for this patient.</p>
      <% } else { %>
        <div class="space-y-4">
          <% records.forEach(r => { %>
            <div class="bg-white border rounded p-4 shadow hover:shadow-md transition">
              <div class="flex flex-wrap items-start justify-between gap-2">
                <div>
                  <h3 class="font-semibold text-gray-900 text-lg"><%= r.title %></h3>
                  <% if (r.doctor && r.doctor.name) { %>
                    <p class="text-sm text-gray-500 mt-0.5">— Dr. <%= r.doctor.name %></p>
                  <% } %>
                </div>
                <span class="text-xs text-gray-500">
                  <%= new Date(r.createdAt).toLocaleString('en-IN') %>
                </span>
              </div>
              <p class="mt-3 whitespace-pre-line text-gray-800 leading-relaxed"><%= r.notes %></p>
            </div>
          <% }) %>
        </div>
      <% } %>
    </div>
  </main>

  <!-- Footer -->
  <footer class="bg-white text-gray-700 text-center p-4 mt-auto border-t">
    &copy; <%= new Date().getFullYear() %> Clinic-AI | Admin Panel
  </footer>
</body>
</html>
